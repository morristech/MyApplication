<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myapplication.activities.FrescoDemoActivity">



    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        fresco:placeholderImage="@drawable/js7"
        android:id="@+id/sdv_activity_fresco_demo_img1"
        android:layout_weight="1"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sdv_activity_fresco_demo_img2"
        android:layout_weight="1"

        fresco:fadeDuration="300"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@color/text_gray"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@drawable/js1"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/js2"
        fresco:retryImageScaleType="centerCrop"
        fresco:progressBarImage="@drawable/partner_red"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:backgroundImage="@color/blue"
        fresco:overlayImage="@drawable/ic_home_new"
        fresco:pressedStateOverlayImage="@drawable/ic_follow"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="1dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="true"
        fresco:roundWithOverlayColor="@android:color/holo_red_light"
        fresco:roundingBorderWidth="2dp"
        fresco:roundingBorderColor="@color/text_yellow"
        />

</LinearLayout>
